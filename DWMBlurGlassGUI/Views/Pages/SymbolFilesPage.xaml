<Page x:Class="DWMBlurGlassGUI.Views.Pages.SymbolFilesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:viewmodels="clr-namespace:DWMBlurGlassGUI.ViewModels.Pages"
      mc:Ignorable="d"
      d:DataContext="{d:DesignInstance viewmodels:SymbolFilesViewModel, IsDesignTimeCreatable=False}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SymbolFilesPage">

    <StackPanel Margin="20,15,20,20">
        <ui:TextBlock 
            Text="{Binding Lang[symbol]}" 
            FontTypography="Title"
            Margin="0,0,0,15"/>

        <!-- Symbol Status Card -->
        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="{DynamicResource ControlCornerRadius}" 
                Padding="12">
            <StackPanel>
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <ui:SymbolIcon Symbol="Bug24" Margin="0,0,10,0" FontSize="18"/>
                        <TextBlock Text="{Binding Lang[symbolfile]}" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="14"/>
                        <TextBlock Text="{Binding SymbolStatus}" VerticalAlignment="Center" FontSize="14" Margin="10,0,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSymbolValid}" Value="True">
                                            <Setter Property="Foreground" Value="#FF4CAF50"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsSymbolValid}" Value="False">
                                            <Setter Property="Foreground" Value="{DynamicResource SystemFillColorCautionBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>

                    <ui:Button Grid.Column="1" Content="{Binding Lang[download]}" Command="{Binding DownloadSymbolsCommand}" Appearance="Primary" MinWidth="80" IsEnabled="{Binding CanDownload}"/>
                </Grid>

                <!-- Progress Bar (visible when downloading) -->
                <StackPanel Margin="0,0,0,12">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <ProgressBar Value="{Binding DownloadProgress}" Height="6" Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding DownloadStatusText}" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                </StackPanel>

                <!-- Download Status Text (visible when not downloading but has status) -->
                <TextBlock Text="{Binding DownloadStatusText}" FontSize="12" Margin="0,0,0,12" Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding DownloadStatusText}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <TextBlock Text="{Binding Lang[symtip]}" 
                           TextWrapping="Wrap" 
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}" 
                           FontSize="12"/>
            </StackPanel>
        </Border>

        <!-- Auto Download Symbol Files Card -->
        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}" 
                BorderThickness="1" 
                CornerRadius="{DynamicResource ControlCornerRadius}" 
                Padding="12"
                Margin="0,12,0,0">
            <StackPanel>
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <ui:SymbolIcon Symbol="ArrowDownload24" Margin="0,0,10,0" FontSize="18"/>
                        <TextBlock Text="{Binding Lang[autodownloadsymbol]}" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="14"/>
                    </StackPanel>

                    <ui:ToggleSwitch Grid.Column="1" IsChecked="{Binding AutoDownloadSymbols}" VerticalAlignment="Center"/>
                </Grid>

                <TextBlock Text="{Binding Lang[autodownloadsymboltip]}" 
                           TextWrapping="Wrap" 
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}" 
                           FontSize="12"/>
            </StackPanel>
        </Border>
    </StackPanel>
</Page>
